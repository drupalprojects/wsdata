/**
 * Implements hook_field_storage_load().
 */
function wsfields_storage_field_storage_load($entity_type, $entities, $age, $fields, $options) {
  // Load the list of fields
  $field_info = field_info_field_by_ids();
  // Load the instances so we can read the web service data settings
  $field_instances = field_info_instances($entity_type);
  $load_current = $age == FIELD_LOAD_CURRENT;

  // Loop through the fields
  foreach ($fields as $field_id => $ids) {
    $field = $field_info[$field_id];
    $field_name = $field['field_name'];

    // Load web service settings from instance settings
    $settings = array();
    foreach ($field_instances as $bundle => $bundle_fields) {
      if (isset($bundle_fields[$field_name]['settings']['wsfield']) and $bundle_fields[$field_name]['settings']['wsfield'] == TRUE) {
        $settings = $bundle_fields[$field_name]['settings'];
        break;
      }
    }

    if (!empty($settings)) {
      // Load the data for each entity
      foreach ($entities as $entity) {
        $data = _wsfields_data_load($entity_type, $bundle_fields[$field_name], $entity);

        if (!is_null($data) && FALSE !== $data) {
          $data = module_invoke_all('wsfields_' . $field['type'] . '_data_alter', $data, $bundle_fields[$field_name], $field['columns']);

          // Display debug information if required
          if (WSFIELDS_DEBUG) {
            if (!drupal_is_cli()) {
              dpm($data);
            }
          }

          $entities[$entityid]->$field_name = $data;
        }
      }
    }
  }
}

